<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{MMM dd, YYYY h:mm:ss a} %C %M %n%p: %m%ex%n" />
		</Console>
	</Appenders>
	
    <Loggers>
        <Logger name="com.adfonic.retargeting" level="INFO" additivity="false">
            <AppenderRef ref="Console"/> 
        </Logger>
        <Logger name="com.adfonic.tasks" level="INFO" additivity="false">
            <AppenderRef ref="Console"/> 
        </Logger>
        <Logger name="com.adfonic.tasks.dmp" level="INFO" additivity="false">
            <AppenderRef ref="Console"/> 
        </Logger>
        <Logger name="com.adfonic.tasks.dmp.DeleteOldDataPolicy" level="INFO" additivity="false">
            <AppenderRef ref="Console"/> 
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="Console"/> 
        </Root>
   </Loggers>
</Configuration>