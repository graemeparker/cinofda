#!/bin/bash

if [ $# -ne 2 ]; then
    echo "Usage: $0 <inputFile> <csvOutputFile>"
    exit 1
fi

# This is a trick that lets developers use mvn to run this locally.
if [ -f pom.xml ]; then
    echo "Running in developer mode"
    exec mvn \
        compile \
        exec:exec \
        -Dexec.classpathScope=runtime \
        -Dexec.executable="java" \
        -Dexec.args="-Xmx1024m -Djava.util.logging.config.file=conf/logging.properties -cp %classpath com.adfonic.tasks.GenerateZipToDma $1 $2"
fi

echo "Not really intended for use in production, just run this locally."
exit 1
